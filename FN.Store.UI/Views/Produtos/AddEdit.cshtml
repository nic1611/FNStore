@model FN.Store.UI.Models.Produto

@{ 
    ViewBag.Title = $"{(Model.Id == 0 ? "Adicionar" : "Editar")} Produto";
}

<h2>@ViewBag.Title</h2>

<form action="/Produtos/AddEdit" method="post">
    <div class="form-group">
        <label for="txtNome">Nome:</label>
        <input class="form-control" type="text" name="nome" id="txtNome" value="@Model.Nome" />
    </div>
    <div class="form-group">
        <label>Preço:</label>
        <input class="form-control" type="text" name="preco" value="@Model.Preco" />
    </div>
    <div class="form-group">
        <label>Tipo:</label>
        <select name="TiposDeProdutoId" class="form-control">
            @foreach (FN.Store.UI.Models.TipoDeProduto tipo in ViewBag.Tipos)
            {
                <option @(tipo.Id == Model.TipoDeProdutoId ? "selected" : "")
                        value="@tipo.Id">@tipo.Nome</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Quantidade:</label>
        <input class="form-control" type="text" name="qtde" value="@Model.Qtde" />
    </div>
    <div class="form-group">
        <button class="btn btn-outline-secondary" type="submit">Salvar</button>
        <a class="btn btn-outline-info" href="~/Produtos">Voltar</a>
    </div>
</form>